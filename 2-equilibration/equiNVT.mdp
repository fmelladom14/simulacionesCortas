; equiNVT.mdp


; RUN CONTROL PARAMETERS
integrator               = md      ; leap-frog integrator
dt                       = 0.0005  ; 0.5 fs
nsteps                   = 400000    ; 200 ps 
define			 = -DFLEXIBLE -DCHARMM_TIP3P
constraints          	 = none
comm-mode                = Linear ; mode for center of mass motion removal
nstcomm                  = 1000 ; number of steps for center of mass motion removal

; OUTPUT CONTROL OPTIONS
nstxout                  = 200    ; Save coordinates every 0.1 ps 
nstvout                  = 200    ; Save velocities every 0.1 ps
nstfout                  = 0	   ; Save forces
nstlog                   = 200     ; Update log every 0.1 ps
nstenergy                = 200    ; Save energies every 0.1 ps
nstcalcenergy        	 = 200

; NEIGHBORSEARCHING PARAMETERS
nstlist                  = 10
ns-type                  = Grid
pbc                      = xyz
rlist                    = 1.1
cutoff-scheme		 = Verlet 


; OPTIONS FOR ELECTROSTATICS AND VDW
coulombtype              = PME
rcoulomb                 = 1.1
fourierspacing		 = 0.12		; Dimensiones de la Grid (para PME)
vdwtype=Cut-off
vdw_modifier=Potential-switch
rvdw_switch              = 0.9
rvdw                     = 1.1          ; Large vdW cut-off
; DISPERSION CORRECTION
DispCorr                 = EnerPres     ; Use with vdW vut-off

; Temperature coupling
Tcoupl			  = v-rescale
;ld_seed			  = 87654321
tc-grps                  = System
tau_t                    = 0.1                
ref_t                    = 298                ; Avobe fluid phase trasition


; GENERATE VELOCITIES FOR STARTUP RUN
gen_vel                  = yes    ; Should be the first equilibration
gen_temp                 = 298.0  ; Temperature to generate corresponding Maxwell distribution
gen_seed                 = 12345678     ; Random seed



